{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"eslint-config-prettier",
		"standard-with-typescript"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": ["tsconfig.json"]
	},
	"plugins": ["react"],
	"rules": {
		// "react/react-in-jsx-scope": "off",
		"tabWidth": 4,
		"no-unused-vars": "warn"
	},
	"settings": {
		"import/resolver": {
			"eslint-import-resolver-custom-alias": {
				"alias": {
					"~": "./src"
				},
				"extensions": [".ts", ".tsx"]
			}
		}
	}
}
